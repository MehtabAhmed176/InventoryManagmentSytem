@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>



<!--Adding Table view-->

<p>
    <a asp-action="CreateUser" class="btn btn-default">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                UserName
            </th>

            <th>
                Email
            </th>

            <th>
                Role
            </th>

            <th>
                Branch Name
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UserBranchId)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserBranchName.BranchName)

            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-default">Edit</a>

                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
